<%- include("common/header") %>
<div class="title_img">
    <div class="center_title">
        <h2>CONTACT US</h2>
        <p>Index / Contact Us</p>
    </div>
</div>
<div class="contact_us">
    <div class="center">
        <h2>UPDATE FORM</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
        <div class="admininfo">
            <div class="info_list">
                <div><i class="fa-solid fa-location-dot"></i></div>
                <h5>Office Address</h5>
                <p>Goyang Road,ilsan Daehwa</p>
            </div>
            <div class="info_list">
                <div><i class="fa-solid fa-phone"></i></div>
                <h5>Phone Number</h5>
                <p>+55 418 652 8973</p>
            </div>
            <div class="info_list">
                <div><i class="fa-solid fa-envelope-open-text"></i></div>
                <h5>Email Address</h5>
                <p>rhgustmfrh@naver.com</p>
            </div>
            <div class="info_list">
                <div><i class="fa-solid fa-globe"></i></div>
                <h5>Web</h5>
                <p>rhgustmfrh@naver.com</p>
            </div>
        </div>
        <form class="brdInsert" enctype="multipart/form-data" action="/update" method="post">
            <input type="hidden" name="id" value="<%- brdData.brdid %>">
            <div class="line">
                <% if(userData){ %>
                <p><%- userData.joinnick %></p>
                <% } %>
                <input type="text" name="email" placeholder="Email">
            </div>
            <div class="line">
                <input class="subject" type="text" name="subject" placeholder="Subject" value="<%- brdData.brdsubject %>">
                <input type="text" name="number" placeholder="Number">
            </div>
            <textarea id="context" name="context" placeholder="Write message"><%- brdData.brdcontext %></textarea>
            <div class="addfileWrap">
                <label for="addfile">파일첨부</label>
                <input id="addfile" type="file" name="uptfile">
                <span>변경할 이미지를 첨부해 주세요.</span>
            </div>
            <button id="submitBtn" type="submit">UPDATE MESSAGE</button>
        </form>
    </div>
</div>
<%- include("common/footer") %>
<!-- 구역이동 및 햄버거 메뉴 -->
<script src="/js/subsection.js"></script>
<script>
    const submitBtn = document.querySelector("#submitBtn");
    const titleResult = document.querySelector(".subject");
    const contextResult = document.querySelector("#context");
    const submitForm = document.querySelector(".brdInsert");

    submitBtn.addEventListener("click",function(e){
        
        //문자열의 띄어쓰기 공백들을 제거해주는 문자열처리 함수 trim()

        let submitValue = titleResult.value;
        let submitValue2 = contextResult.value;
        submitValue = submitValue.trim();
        submitValue2 = submitValue2.trim();

        if(submitValue === "" || submitValue2 === ""){
            e.preventDefault();
            alert("제목과 내용을 입력해주세요");
        } 
        else{
            submitForm.submit();
        }
    });
</script>
</body>
</html>