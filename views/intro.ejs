<!-- 구역이동 및 햄버거 메뉴 -->
<script src="/js/subsection.js"></script>
<script>
    //기능에 필요한 변수 세팅
    let loadBtn = document.querySelector(".load_more"); // 상품 더보기 버튼
    let boxList = document.querySelectorAll(".choose_list"); // 상품리스트 9개 div태그
    let startIndex = 3; //반복문 초기값 세팅 변수 

    loadBtn.addEventListener("click",function(e){
        e.preventDefault();
        //반복문으로 상품리스트 3개씩 등장하게 처리
        for(let i = startIndex; i < startIndex+3; i++){

            boxList[i].style.display = "flex"; // 상품 3개씩 display block으로 화면에 보이게 처리
        }

        startIndex = startIndex + 3; //버튼을 클릭했을 때 startIndex 변수값은 3을 더해서 갱신

        //스타트인덱스 변수의 값이  박스리스트.length 값보다 크거나 같을 때 더보기 버튼은 사라짐
        if(startIndex >= boxList.length){

            loadBtn.style.display = "none";
        }
    });

    let ptab = document.querySelector(".ptab");
    let ptabBtn = document.querySelector(".ptabBtn");

    ptabBtn.addEventListener("click",function(e){
        e.preventDefault();
        ptab.style.display = "block";
        ptabBtn.style.display = "none";
    });

    let slider = document.querySelector(".view");
    let circleBtn = document.querySelectorAll(".dotBtn li");
    // 슬라이드 번호 순서값
    let sNumber = 0;

    // 동그라미 버튼들 각각 클릭시 해당 슬라이드 화면으로 넘어감
    for(let j = 0; j < circleBtn.length; j++){
        circleBtn[j].addEventListener("click",function(){
            // 동그라미 버튼전원 비활성화
            for(let k = 0; k < circleBtn.length; k++){
                circleBtn[k].style.border = "none"
                circleBtn[k].style.backgroundColor = "#fff";
            }
            circleBtn[j].style.backgroundColor = "#610509";
            // 화면 넘어가게 처리
            sNumber = j; // 클릭한 동그라미 순서값 sNumber에 대입!
            slider.style.marginLeft = -100 * sNumber + "%";
        });
    }
    let intro = document.querySelector(".intro");
    intro.style.color = "brown";
</script>
<script src="/js/aos.js"></script>
<script>
    AOS.init();
</script>
</body>
</html>